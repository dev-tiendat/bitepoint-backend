  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=dev nest start -w --path tsconfig.json",
    "start:debug": "cross-env NODE_ENV=dev nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=prod node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "NODE_ENV=development typeorm-ts-node-esm -d ./dist/src/config/database.config.js",
    "migration:create": "npm run typeorm migration:create ./src/migrations/initData",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "docker:build:dev": "docker compose --env-file .env --env-file .env.dev up --build",
    "docker:build": "docker compose --env-file .env --env-file .env.prod up --build",
    "docker:up": "docker compose --env-file .env --env-file .env.prod up -d --no-build",
    "docker:down": "docker compose --env-file .env --env-file .env.prod down"
  },
